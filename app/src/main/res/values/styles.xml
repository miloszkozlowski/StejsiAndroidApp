<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
    </style>

    <style name="CommonButton">
        <item name="backgroundTint">@color/colorVioletBcg</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CommonText">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="link">
        <item name="android:textColor">@color/colorVioletBcg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorVioletBcg</item>
        <item name="colorSurface">@color/colorGray</item>
        <item name="colorOnSurface">@color/colorText</item>
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PopUpMenuCustom" parent="android:Widget.Material.PopupMenu">
            <item name="backgroundTint">@color/cardview_dark_background</item>
    </style>



</resources>
